<h1>Packliste</h1>
<p>Neues Item hinzufügen...</p>

<button type="button" class="btn btn-default"><%= link_to "Item hinzufügen", new_item_path %></button>
<br>
<hr>
<% @items.each do |item| %>
<div class="row item">
<% if item.checked? %>
    <div class="col-md-6">
    <h2><s><%= link_to item.title, item %></s></h2>
    </div>
<% else %>
    <div class="col-md-6">
    <h2><%= link_to item.title, item %></h2>
    <p><%= item.description %></p>
    </div>
    <div class="col-md-2">
    <%= link_to check_item_path(item), method: :patch do %>
    <h2><i class="fa fa-check" aria-hidden="true"></i></h2>
    <% end %>
    </div>
<% end %>
</div>
<% end %>

